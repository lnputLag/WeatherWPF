<Window x:Class="WeatherWPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherWPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="#16161c"
        Icon="/Images/app_icon.png"
        Title="Weather App" Height="450" Width="800">
    <StackPanel>
        <Label Margin="0, 50, 0, 30" Content="Регистрация"
                HorizontalAlignment="Center"  
                VerticalAlignment="Top" FontSize="22" Foreground="White"
                FontWeight="Bold"/>
        <TextBox x:Name="UserLoginField" HorizontalAlignment="Center"  
                VerticalAlignment="Top" Width="244" 
                Height="25" Foreground="White"
                TextWrapping="Wrap"
                materialDesign:HintAssist.Hint="Введите логин" />
        <TextBox x:Name="UserEmailField" HorizontalAlignment="Center"  
                VerticalAlignment="Top" Width="244" 
                Height="25" Foreground="White"
                TextWrapping="Wrap"
                materialDesign:HintAssist.Hint="Введите email"
                Margin="0, 20, 0, 0" />
        <PasswordBox  x:Name="UserPassField" HorizontalAlignment="Center"  
                VerticalAlignment="Top" Width="244" 
                Height="25" Foreground="White"
                materialDesign:HintAssist.Hint="Введите пароль" 
                Margin="0, 20, 0, 0"/>
        <Button x:Name="UserRegister" Content="Зарегистрироваться" 
                HorizontalAlignment="Center"  VerticalAlignment="Top"
                Width="200" Height="35" 
                Margin="0, 50, 0, 0" Click="UserRegister_Click"/>
        <Button x:Name="AuthWindowBtn" Content="Авторизация" 
                HorizontalAlignment="Center"  VerticalAlignment="Top"
                Width="200" Height="35" 
                Margin="0, 20, 0, 0" Style="{StaticResource MaterialDesignFlatLightBgButton}" Click="AuthWindowBtn_Click" />
    </StackPanel>   
</Window>
